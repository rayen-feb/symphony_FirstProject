{% extends 'base.html.twig' %}

{% block title %}Authors List{% endblock %}

{% block body %}
<h1>Authors List</h1>

{# Debugging output: Dump authors variable #}
{{ dump(authors) }}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }
    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
    tr:hover {
        background-color: #f5f5f5;
    }
    .actions a {
        margin-right: 10px;
        text-decoration: none;
        color: blue;
    }
</style>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.username }}</td>
                <td>{{ author.email }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No authors found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
